<article>
  <front>
    <article-meta>
      <title-group>
        <article-title>&lt;p specific-use="wrapper"&gt; testing</article-title>
      </title-group>
    </article-meta>
  </front>
  <body>
    <p>List items with block elements</p>
    <list>
      <list-item>
        <preformat>{ orange code block }</preformat>
        <code>{ orange code block }</code>
        <disp-quote>
          <p>orange block quote</p>
        </disp-quote>
      </list-item>
    </list>
    <p>Definitions with block elements</p>
    <def-list>
      <def-item>
        <term>orange</term>
        <def>
          <p>orange fruit</p>
          <preformat>{ orange code block }</preformat>
          <code>{ orange code block }</code>
          <disp-quote>
            <p>orange block quote</p>
          </disp-quote>
        </def>
      </def-item>
      <def-item>
        <term>orange</term>
        <def>
          <p>orange fruit</p>
          <list>
            <list-item>
              <p>sublist</p>
            </list-item>
          </list>
        </def>
      </def-item>
    </def-list>
  </body>
</article>
