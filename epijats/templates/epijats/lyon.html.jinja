{% extends 'epijats/_common.html.jinja' %}


{% macro article_layout(doc, dsi_base_url) %}
  <article lang="en">
    <header>
      {% if doc.dsi %}
      <div class="article-dsi">
        <a href="{{ dsi_base_url }}/{{ doc.dsi }}">
          {{ dsi_base_url }}/<strong>dsi:</strong><code>{{ doc.dsi }}</code>
        </a>
      </div>
      <div class="edition-number">Edition {{ doc.edid }}</div>
      <div class="online-msg">Additional formats and editions available online.</div>
      {% endif %}
    </header>

    <div class="article-main">

      <h1 class="title">{{ doc.title or "No Title" }}</h1>

      {{ contributors_list(doc.contributors) }}

    <aside>
      <dl>
        {% if doc.date %}
        <dt>Authored</dt>
        <dd>{{ doc.date }}</dd>
        {% endif %}

        <dt>Archived</dt>
        <dd>2099-12-31</dd>

        <dt>Citation</dt>
        <dd>
          {% for contributor in doc.contributors %}
            {{ (contributor['given-names'] ~ ' ' ~ contributor.surname) | escape }}
          {% endfor %}
          (2022)
          "{{ doc.title }}"
          perm.pub<br/>
          {{ dsi_base_url }}/<br/>
          dsi:<code>{{ doc.dsi }}</code>
        </dd>
      </dl>
    </aside>

      <section class="abstract">
        {% if doc.abstract %}
        <h2>Abstract</h2>
        {{ doc.abstract }}
        {% endif %}
      </section>

      <div class="article-body">
        {% if doc.body %}
        {{ doc.body }}
        {% endif %}
      </div>

      <footer>
        <p>
          <a href="http://creativecommons.org/licenses/by/4.0/" rel="nofollow">
            <img alt="CC BY 4.0" src="https://img.shields.io/badge/License-CC%20BY%204.0-lightgrey.svg">
            https://creativecommons.org/licenses/by/4.0/
          </a>
        </p>
        <p>
          2022 © The Authors.
          This document is distributed under a Creative Commons Attribution 4.0 International
          license.
        </p>
      </footer>

    </div><!-- article-main -->
  </article>
{% endmacro %}

{# article_css_style is used to generated standalone HTML page and eprint PDF #}
{% macro article_css_style() %}
  {{- article_main_css_style() }}
{% endmacro %}

{# article_main_css_style is used by popgen.es website #}
{% macro article_main_css_style() %}
  {{- common_css() }}
  {{- pandoc_class_css() }}
  <style>
    :root {
      --eprint-font-sans: 'Fira Sans', sans-serif;
      --eprint-font-mono: 'Fira Mono', monospace;
      --eprint-font-condensed: 'Fira Sans Condensed', sans-serif;
      --main-color: #04b;
      --text-color: black;
      --light-text-color: #555;
    }


    /* Page */

    @page {
      color: #555;
      font-family: var(--eprint-font-sans);
      font-size: 10pt;
      font-weight: 300;
      line-height: 1.2;
      size: A4 portrait;
      margin: 96px 36.85px; /* = A4 @page width of 720px */

      @bottom-left {
        border-top: 0.005in solid;
        content: element(header);
        margin-top: 1em;
        padding-top: 1em;
        vertical-align: top;
        width: 60%;
      }
      @bottom-right {
        border-top: 0.005in solid;
        content: counter(page) " of " counter(pages);
        margin-top: 1em;
        padding-top: 1em;
        vertical-align: top;
        width: 40%;
      }
    }

    @page:first {
      margin-top: 128px;

      @top-left {
        background: url(static/cc.svg) left center / 0.8in 0.8in no-repeat;
        content: "";
        width: 40%;
      }
    }


    /* Common */

    body {
      max-width: 60rem; /* 720px with 12px root font */
      color: var(--text-color);
      font-family: var(--eprint-font-sans);
      font-size: 10pt;
      line-height: 1.4;
      margin: 0;
    }
    article {
      margin-left: 25%;
    }
    .article-main {
      margin: 4em 0 1em;
    }

    p {
      hyphens: auto;
      hyphenate-limit-chars: 3 3;
    }

    ul li::marker {
      content: "–  ";
    }
    li p {
      margin: 0;
    }


    /* Titles */

    article h1, article h2, article h3, article h4 {
      font-weight: 300;
      line-height: 1;
      margin: 1.4em 0 0.6em 0;
    }
    article h1 {
      font-size: 2.6em;
      letter-spacing: -0.03em;
    }
    article h1.title {
      margin-top: 0.7em;
    }
    article h1.title::after {
      border-bottom: 0.05in solid;
      border-color: var(--main-color);
      content: "";
      display: block;
      height: 0;
      margin: 0.5em 0;
      width: 2em;
    }
    article h2 {
      font-size: 1.8em;
      letter-spacing: -0.02em;
    }
    article h3 {
      font-size: 1.45em;
    }
    article h4 {
      font-size: 1.25em;
    }


    /* Specific Structure Blocks */

    aside {
      position: absolute;
      left: 0;
      bottom: 0;
      font-size: 0.8em;
      font-family: var(--eprint-font-condensed);
      font-stretch: condensed;
      overflow-wrap: anywhere;
      width: 20%;
    }
    aside dl {
      margin: 1em 0;
    }
    aside dt {
      display: inline-block;
      font-weight: bold;
      padding-top: 0.5em;
    }
    aside dt::after {
      content: ": ";
    }
    aside dd {
      display: inline;
      margin: 0;
    }
    aside dd::after {
      content: '\A';
      white-space: pre-line;
    }

    article header {
      color: var(--light-text-color);
      font-weight: 300;
      line-height: 1.2;
      position: running(header);
    }

    footer {
      border-top: 0.005in solid;
      break-inside: avoid;
      color: var(--light-text-color);
      font-weight: 300;
      margin-top: 3em;
      padding-top: 1em;
    }
    footer p {
      margin: 0;
    }
    footer img {
      vertical-align: bottom;
    }


    /* Specific Elements */

    article .contributors dt, article .contributors dd {
      display: inline;
      margin: 0;
    }
    article .contributors dt:has(+ dt)::after {
      content: ",";
    }
    article .contributors dd::before {
      content: "(";
    }
    article .contributors dd::after {
      content: "),";
    }
    article .contributors dd:last-child::after {
      content: ")";
    }
    article .abstract {
      border-bottom: 0.005in solid;
      margin-bottom: 3em;
    }
    .edition-number, .online-msg {
      display: inline;
    }
    .katex {
      break-before: avoid;
    }
    .orcid-icon::before {
      background: url("data:image/svg+xml;base64,") no-repeat;
      content: "";
      display: inline-block;
      height: 1em;
      vertical-align: -10%;
      width: 1em;
    }
  </style>
{% endmacro %}
