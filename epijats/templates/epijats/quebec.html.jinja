{% extends 'epijats/_common.html.jinja' %}


{% macro article_layout(doc, dsi_base_url, website_hooks=none) %}
  <article lang="en" class="eprint">
    <header>
      {% if doc.dsi %}
      <div class="article-dsi">
        <a href="{{ dsi_base_url }}/{{ doc.dsi }}">
          <span class="logotype">perm.pub/</span><strong>dsi:</strong><code>{{ doc.dsi }}</code>
        </a>
      </div>
      {% endif %}
    </header>

    <div class="article-main">

      <aside>
        <dl>
          {% if doc.edid %}
          <big><big><big>
          <dt>Edition</dt>
          <dd>{{ doc.edid }}</dd>
          </big>
          </big>
          </big>
          {% endif %}

          <dt>Digital Succession Identifier</dt>
          <dd>
            <p>
              <a href="{{ dsi_base_url }}/dsi:{{ doc.dsi }}">
                <code>{{ doc.dsi }}</code>
              </a>
              Additional formats and editions available online.
            </p>
          </dd>

          <dt>Correspondence</dt>
          <dd>
          {% for contributor in doc.contributors %}
            {% if contributor.email %}
            <a href="mailto:{{ contributor.email[0] | escape }}">
              {{ contributor.email | join(', ') | escape }}
            </a>
            {% endif %}
          {% endfor %}
          </dd>

          {% if doc.date %}
          <dt>Authored</dt>
          <dd>{{ doc.date }}</dd>
          {% endif %}

          <dt>Archived</dt>
          <dd class="date">2099-12-31</dd>

          <dt>Source baseprint</dt>
          <dd>
            <p>
              <a href="https://archive.softwareheritage.org/{{ doc.hash_scheme }}{{ doc.hexhash }}">
                {{ doc.hash_scheme }} <br/>
                <code style="font-size: 0.66rem">{{ doc.hexhash }}</code>
              </a>
            </p>
          </dd>

          <dt>Citation</dt>
          <dd>
            <p>
              {% for contributor in doc.contributors %}
                {{ (contributor['given-names'] ~ ' ' ~ contributor.surname) | escape }}
              {% endfor %}
              (2022)
              "{{ doc.title }}"
              perm.pub {{ dsi_base_url }}/<br/>
              dsi:<code>{{ doc.dsi }}</code>
            </p>
          </dd>

          <dt>Copyright</dt>
          <dd>
            <p>
              <a href="http://creativecommons.org/licenses/by/4.0/" rel="nofollow">
                https://creativecommons.org/licenses/by/4.0/
              </a>
            </p>
            <p>
              2022 Â© The Authors.
              This document is distributed under a Creative Commons Attribution 4.0 International
              license.
            </p>
          </dd>

        </dl>
      </aside>

      <h1 class="title">{{ doc.title or "No Title" }}</h1>

      {{ contributors_list(doc.contributors, show_email=False) }}

      <section class="abstract">
        {% if doc.abstract %}
        <h2>Abstract</h2>
        {{ doc.abstract }}
        {% endif %}
      </section>

      <div class="article-body">
        {% if doc.body %}
        {{ doc.body }}
        {% endif %}
      </div>

    </div><!-- article-main -->
  </article>
{% endmacro %}

{# article_css_style is used to generated standalone HTML page and eprint PDF #}
{% macro article_css_style() %}
  <style>
    html {
      font-size: 12px;
    }
    body {
      margin: 0;
    }
    *, ::after, ::before {
      box-sizing: border-box;
    }
  </style>
  {{- article_main_css_style() }}
{% endmacro %}

{# article_main_css_style is used by popgen.es website #}
{% macro article_main_css_style() %}
  {{- common_css() }}
  {{- pandoc_class_css() }}
  <style>
    :root {
      --eprint-font-sans: 'Fira Sans', sans-serif;
      --eprint-font-mono: 'Fira Mono', monospace;
      --eprint-font-condensed: 'Fira Sans Condensed', sans-serif;
      --main-color: #0645ad;
      --text-color: black;
      --light-text-color: #555;
    }
    .eprint {
      --accent-color: #a6ce39;
    }


    /* Page */

    @page {
      color: #555;
      font-family: var(--eprint-font-sans);
      font-size: 10pt;
      font-weight: 300;
      line-height: 1.2;
      size: A4 portrait;
      margin: 96px 36.85px; /* = A4 @page width of 720px */

      @bottom-right {
        content: counter(page) " of " counter(pages);
        margin-top: 1em;
        padding-top: 1em;
        vertical-align: top;
        width: 40%;
      }
    }

    @page:first {
      margin-top: 128px;

      @top-right {
        background: url(static/cc.svg) right center / 0.8in 0.8in no-repeat;
        content: "";
        width: 20%;
        margin-top: 48px;
      }

      @top-left {
        content: element(header);
        vertical-align: top;
        width: 80%;
        margin-top: 24px;
      }
    }


    /* Article */

    article {
      max-width: 60rem; /* 720px with 12px root font */
      color: var(--text-color);
      font-family: var(--eprint-font-sans);
      line-height: 1.4;
      margin: 0;
      hyphens: manual;
      overflow-wrap: normal;
      padding-top: 64px;
    }


    /* Titles */

    article h1, article h2, article h3, article h4 {
      font-weight: 300;
      line-height: 1;
      margin: 1.4em 0 0.6em 0;
    }
    article h1 {
      font-size: 2.6em;
      letter-spacing: -0.03em;
    }
    article h1.title {
      margin-top: 0.7em;
    }
    article h1.title::after {
      border-bottom: 0.05in solid;
      border-color: var(--accent-color);
      content: "";
      display: block;
      height: 0;
      margin: 0.5em 0;
      width: 2em;
    }
    article h2 {
      font-size: 1.8em;
      letter-spacing: -0.02em;
    }
    article h3 {
      font-size: 1.45em;
    }
    article h4 {
      font-size: 1.25em;
    }


    /* Specific Structure Blocks */

    article .article-main {
      width: 70%;
      margin-left: 30%;
    }

    aside {
      position: absolute;
      left: 0;
      font-family: var(--eprint-font-condensed);
      font-stretch: condensed;
      overflow-wrap: anywhere;
      max-width: 18rem; /* = 30% of article max-width 60rem */
      width: 30%;
      padding-right: 2rem;
      text-align: left;
    }
    aside dl p {
      text-align: left;
      font-size: 0.8rem;
      margin: 0;
    }
    aside dl {
      margin: 0 0 1rem;
    }
    aside dt {
      font-weight: bold;
    }
    aside dt::after {
      content: ": ";
    }
    aside dd {
      margin: 0;
      margin-bottom: 1rem;
    }
    aside dd::after {
      content: '\A';
      white-space: pre-line;
    }

    @media screen {
      article header {
          display: none;
      }
    }
    article header {
      color: var(--light-text-color);
      font-size: 1.5rem;
      font-weight: 300;
      line-height: 1.2;
      position: running(header);
      text-align: left;
      margin-top: 32px;
    }

    /* Specific Elements */

    article header .article-dsi {
      display: inline-block;
      padding-top: 12px;
      margin-right: 64px;
    }
    article header .article-dsi code {
      margin: 0;
    }
    article header .logotype {
      font-size: 2.5rem;
      font-weight: bold;
      color: var(--accent-color);
    }

    .article-dsi code {
      margin-left: 3px;
    }

    article dl.contributors {
      margin-bottom: 40px;
    }
    article .contributors dt, article .contributors dd {
      display: inline;
      margin: 0;
    }
    article .contributors dt:has(+ dt)::after {
      content: ",";
    }
    article .contributors dd::before {
      content: "(";
    }
    article .contributors dd::after {
      content: "),";
    }
    article .contributors dd:last-child::after {
      content: ")";
    }
    article .abstract {
      border-bottom: 0.005in solid;
      padding-bottom: 8px;
      margin-bottom: 64px;
    }
    .article-main p {
      text-align: justify;
    }
    .article-main p {
      hyphens: auto;
      hyphenate-limit-chars: 9 3;
    }
    .katex {
      break-before: avoid;
    }
    .orcid-icon::before {
      background: url("data:image/svg+xml;base64,") no-repeat;
      content: "";
      display: inline-block;
      height: 1em;
      vertical-align: -10%;
      width: 1em;
    }
  </style>
{% endmacro %}
