{% extends 'epijats/_common.html.jinja' %}


{% macro article_layout(doc, dsi_base_url, website_hooks=none) %}
  <article lang="en" class="eprint">
    <header>
      {% if doc.dsi %}
      <div class="article-dsi">
        <a href="{{ dsi_base_url }}/{{ doc.dsi }}">
          <span class="logotype">perm.pub/</span><strong>dsi:</strong><code>{{ doc.dsi }}</code>
        </a>
      </div>
      <div class="online-msg">Additional formats and editions available online.</div>
      {% endif %}
    </header>

    <div class="top-metadata">
      {{edition_band(doc)}}
      {{article_dates(doc)}}
    </div>

    <footer class="swhid">
      <div class="article-swhid">
        <b>Archived baseprint:</b><br>
        <a href="{{ swh_archive_url}}{{ doc.hash_scheme }}{{ doc.hexhash }}">
          <strong>{{ doc.hash_scheme }}</strong><code>{{ doc.hexhash }}</code>
        </a>
      </div>
    </footer>

    <main>

      <aside>

        {{edition_band(doc)}}

        {{article_dates(doc)}}

        {% if website_hooks %}
        <div class="article-buttons">
          {{ website_hooks.correspond() }}
          {{ website_hooks.cite() }}
        </div>
        {% endif %}

        <dl>

          {% if not website_hooks %}
          <dt>Correspondence</dt>
          <dd>
          {% for contributor in doc.contributors %}
            {% if contributor.email %}
            <a href="mailto:{{ contributor.email[0] | escape }}">
              {{ contributor.email | join(', ') | escape }}
            </a>
            {% endif %}
          {% endfor %}
          </dd>

          <dt>Citation</dt>
          <dd>
            {% for contributor in doc.contributors %}
              {{ (contributor['given-names'] ~ ' ' ~ contributor.surname) | escape }}
            {% endfor %}
            (2022)
            "{{ doc.title }}"
            perm.pub {{ dsi_base_url }}/<br/>
            dsi:<code>{{ doc.dsi }}</code>
          </dd>
          {% endif %}

          <dt>Copyright</dt>
          <dd>
            {{ copyright(doc) }}
          </dd>

        </dl>
      </aside>

      <h1 class="title">{{ doc.title or "No Title" }}</h1>

      {{ contributors_list(doc.contributors, show_email=False) }}

      {% if website_hooks %}
      <div class="article-buttons">
        {{ website_hooks.correspond() }}
        {{ website_hooks.cite() }}
      </div>
      {% endif %}

      <section class="abstract">
        {% if doc.abstract %}
        <h2>Abstract</h2>
        {{ doc.abstract }}
        {% endif %}
      </section>

      <div class="article-body">
        {% if doc.body %}
        {{ doc.body }}
        {% endif %}
      </div>

      <footer class="copyright">
        {{- copyright(doc) }}
      </footer>

    </main>
  </article>
{% endmacro %}


{# article_css_style is used to generated standalone HTML page and eprint PDF #}
{% macro article_css_style() %}
  <style>
    html {
      font-size: 12px;
    }
  </style>
  {{- article_main_css_style() }}
{% endmacro %}


{# article_main_css_style is used by popgen.es website #}
{% macro article_main_css_style() %}
  {{- common_css() }}
  {{- pandoc_class_css() }}
  <style>
    :root {
      --eprint-font-sans: 'Fira Sans', sans-serif;
      --eprint-font-mono: 'Fira Mono', monospace;
      --eprint-font-condensed: 'Fira Sans Condensed', sans-serif;
    }


    /* .eprint class for embedding website to control variable scope */

    .eprint {
      --main-color: #0645ad;
      --text-color: black;
      --light-text-color: #555;
      --accent-color: #a6ce39;
    }


    /* Page */

    @page {
      color: #555;
      font-family: var(--eprint-font-sans);
      font-size: 1.1rem;
      font-weight: 300;
      line-height: 1.2;
      size: A4 portrait;
      margin: 96px 36.85px; /* = A4 @page width of 720px */

      @bottom-left {
        content: element(footer);
        margin-top: 1em;
        padding-top: 1em;
        vertical-align: top;
        width: 60%;
      }
      @bottom-right {
        content: counter(page) " of " counter(pages);
        margin-top: 1em;
        padding-top: 1em;
        vertical-align: top;
        width: 40%;
      }
    }

    @page:first {
      margin-top: 128px;

      @top-right {
        background: url(static/cc.svg) right center / 76px 76px no-repeat;
        content: "";
        width: 76px;
        margin-top: 48px;
      }

      @top-left {
        content: element(header);
        vertical-align: top;
        margin-top: 1.25rem;
      }
    }


    /* Article */

    article {
      color: var(--text-color);
      font-family: var(--eprint-font-sans);
      line-height: 1.4;
      margin: 0;
    }
    @media screen {
      article header .online-msg {
          display: none;
      }
      .logotype {
          display: none;
      }
    }


    /* Media responsive logic */

    aside {
      display: none;
    }

    @media print {
      aside {
        display: block;
      }
      article main {
        margin-left: 30%;
      }
      .top-metadata {
        display: none;
      }
      footer.copyright {
        display: none;
      }
    }

    @media (min-width: 66em) {
      aside {
        display: block;
      }
      .top-metadata {
        display: none;
      }
      main .article-buttons {
        display: none;
      }
      footer.copyright {
        display: none;
      }
    }


    /* Titles */

    article h1, article h2, article h3, article h4 {
      font-weight: 300;
      line-height: 1;
      margin: 1.4em 0 0.6em 0;
    }
    article h1 {
      font-size: 2.6em;
      letter-spacing: -0.03em;
    }
    article h1.title::after {
      border-bottom: 0.375rem solid;
      border-color: var(--accent-color);
      content: "";
      display: block;
      height: 0;
      margin: 0.5em 0;
      width: 2em;
    }
    article h2 {
      font-size: 1.8em;
      letter-spacing: -0.02em;
    }
    article h3 {
      font-size: 1.45em;
    }
    article h4 {
      font-size: 1.25em;
    }


    /* Specific Structure Blocks */

    main {
      margin: 4em 0 1em;
    }

    aside {
      position: absolute;
      left: 0;
      font-family: var(--eprint-font-condensed);
      font-stretch: condensed;
      overflow-wrap: anywhere;
      width: 30%;
      padding-right: 2rem;
    }
    aside dl p {
      text-align: left;
      font-size: 0.8rem;
      margin: 0;
    }
    aside dl {
      margin: 0 0 1rem;
    }
    aside dt {
      font-weight: bold;
    }
    aside dt::after {
      content: ": ";
    }
    aside dd {
      margin: 0;
      margin-bottom: 1rem;
    }
    aside dd::after {
      content: '\A';
      white-space: pre-line;
    }

    article header {
      color: var(--light-text-color);
      font-size: 1.5rem;
      font-weight: 300;
      line-height: 1.2;
      position: running(header);
      margin-top: 32px;
    }

    footer.swhid {
      color: var(--light-text-color);
      font-weight: 300;
      line-height: 1.2;
      position: running(footer);
    }

    footer.copyright {
      border-top: 0.005in solid;
      break-inside: avoid;
      color: var(--light-text-color);
      font-weight: 300;
      margin-top: 3em;
      padding-top: 1em;
    }
    footer.copyright p {
      margin: 0;
    }


    /* Specific Elements */

    article header .article-dsi {
      display: inline-block;
      padding-top: 12px;
      margin-right: 64px;
    }
    article header .article-dsi code {
      margin: 0;
    }
    article header .logotype {
      font-size: 2.5rem;
      font-weight: bold;
      color: var(--accent-color);
    }

    .article-dsi, .article-swhid {
      margin-bottom: 8px;
    }
    .article-dsi code, .article-swhid code {
      margin-left: 3px;
    }
    .article-swhid {
      word-break: break-all;
    }
    .article-swhid code {
      font-size: 0.825em;
    }

    .edition-number {
      display: inline-block;
      font-size: 1.75em;
      font-weight: 300;
      margin-right: 24px;
    }
    .edition-obsolete {
      display: inline-block;
      font-size: 1.5rem;
      color: #ff2116;
    }
    .edition-obsolete svg {
      vertical-align: baseline;
      margin-bottom: -2px;
    }

    dl.article-dates {
      margin-bottom: 0.5rem;
    }
    dl.article-dates dt::after {
      content: ": ";
    }
    dl.article-dates dt {
      display: inline-block;
      font-weight: bold;
      padding-bottom: 0.5em;
      min-width: 6.25rem;
    }
    dl.article-dates dd {
      display: inline;
      margin: 0;
    }
    dl.article-dates dd::after {
      content: '\A';
      white-space: pre-line;
    }

    article dl.contributors {
      margin-bottom: 40px;
    }
    article .contributors dt, article .contributors dd {
      display: inline;
      margin: 0;
    }
    article .contributors dt:has(+ dt)::after {
      content: ",";
    }
    article .contributors dd::before {
      content: "(";
    }
    article .contributors dd::after {
      content: "),";
    }
    article .contributors dd:last-child::after {
      content: ")";
    }
    article .abstract {
      border-bottom: 0.005in solid;
      padding-bottom: 0.5em;
      margin-bottom: 4em;
    }
    main p {
      text-align: justify;
    }
    main p {
      hyphens: auto;
      hyphenate-limit-chars: 9 3;
    }
    .katex {
      break-before: avoid;
    }
    .orcid-icon::before {
      background: url("data:image/svg+xml;base64,") no-repeat;
      content: "";
      display: inline-block;
      height: 1em;
      vertical-align: -10%;
      width: 1em;
    }
  </style>
{% endmacro %}
