{% macro article_main_css_style() %}
  <style>
    :root {
      --eprint-font-sans: 'Fira Sans', sans-serif;
      --eprint-font-mono: 'Fira Mono', monospace;
      --eprint-font-condensed: 'Fira Sans Condensed', sans-serif;
    }


    /* Page */

    @page {
      color: #555;
      font-family: var(--eprint-font-sans);
      font-size: 10pt;
      font-weight: 300;
      line-height: 1.2;
      margin: 1in 0.5in;
      size: A4 portrait;

      @bottom-right {
        content: counter(page) " of " counter(pages);
        margin-top: 1em;
        padding-top: 1em;
        vertical-align: top;
        width: 40%;
      }
    }

    @page:first {
      margin: 1.5in 0.5in 1in;

      @top-right {
        background: url(static/cc.svg) right center / 0.8in 0.8in no-repeat;
        content: "";
        width: 30%;
      }

      @top-left {
        content: element(header);
        vertical-align: top;
        width: 70%;
      }
    }


    /* Article */

    article {
      --main-color: #04b;
      --text-color: black;
      --light-text-color: #555;
      color: var(--text-color);
      font-family: var(--eprint-font-sans);
      line-height: 1.4;
      margin: 0;
      hyphens: manual;
      overflow-wrap: normal;
    }
    @media print {
      article {
        font-size: 10pt;
        margin-left: 2%;
        margin-right: 2%;
      }
    }
    @media screen {
      article header {
          display: none;
      }
    }


    /* Titles */

    article h1, article h2, article h3, article h4 {
      font-weight: 300;
      line-height: 1;
      margin: 1.4em 0 0.6em 0;
    }
    article h1 {
      font-size: 2.6em;
      letter-spacing: -0.03em;
      margin-top: 0.7em;
    }
    article h1.title::after {
      border-bottom: 0.05in solid;
      border-color: var(--main-color);
      content: "";
      display: block;
      height: 0;
      margin: 0.5em 0;
      width: 2em;
    }
    article h2 {
      font-size: 1.8em;
      letter-spacing: -0.02em;
    }
    article h3 {
      font-size: 1.45em;
    }
    article h4 {
      font-size: 1.25em;
    }


    /* Specific Structure Blocks */

    article header {
      color: var(--light-text-color);
      font-size: 13pt;
      font-weight: 300;
      line-height: 1.2;
      position: running(header);
      text-align: left;
      margin-top: 0.4in;
    }

    /* Specific Elements */

    .article-dsi code {
      margin-left: 3px;
    }

    article dl.contributors {
      margin-bottom: 40px;
    }
    article .contributors dt, article .contributors dd {
      display: inline;
      margin: 0;
    }
    article .contributors dt:has(+ dt)::after {
      content: ",";
    }
    article .contributors dd::before {
      content: "(";
    }
    article .contributors dd::after {
      content: "),";
    }
    article .contributors dd:last-child::after {
      content: ")";
    }
    article .abstract {
      border-bottom: 0.005in solid;
      padding-bottom: 8px;
      margin-bottom: 64px;
    }
    .article-main p {
      text-align: justify;
    }
    .article-date {
      margin-bottom: 12px;
    }
    div.csl-entry {
      break-inside: avoid;
    }
    article pre {
      break-inside: avoid;
    }
    .katex {
      break-before: avoid;
    }
    .orcid-icon::before {
      background: url("data:image/svg+xml;base64,") no-repeat;
      content: "";
      display: inline-block;
      height: 1em;
      vertical-align: -10%;
      width: 1em;
    }
  </style>
{% endmacro %}
