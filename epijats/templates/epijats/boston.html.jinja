{% extends 'epijats/_common.html.jinja' %}


{% macro article_layout(doc, dsi_base_url) %}
  <article lang="en">
    <header>
      {% if doc.dsi %}
      <div class="article-dsi">
        <a href="{{ dsi_base_url }}/{{ doc.dsi }}">
          {{ dsi_base_url }}/<strong>dsi:</strong><code>{{ doc.dsi }}</code>
        </a>
      </div>
      <div class="edition-number">Edition {{ doc.edid }}</div>
      <div class="online-msg">Additional formats and editions available online.</div>
      {% endif %}
    </header>

    <div class="article-main">

      <h1 class="title">{{ doc.title or "No Title" }}</h1>

      <div class="article-date">
        {% if doc.date %}
        {{ doc.date }}
        {% endif %}
      </div>

      {{contributors_list(doc.contributors)}}

      <section class="abstract">
        {% if doc.abstract %}
        <h2>Abstract</h2>
        {{ doc.abstract }}
        {% endif %}
      </section>

      <div class="article-body">
        {% if doc.body %}
        {{ doc.body }}
        {% endif %}
      </div>

    </div><!-- article-main -->
  </article>
{% endmacro %}

